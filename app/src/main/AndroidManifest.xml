<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yt.fooddeliveryappui">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDeliveryAppUi"
        tools:targetApi="31"
        >
        <activity
            android:name=".screens.activities.CartActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.activities.DetailActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.activities.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodDeliveryAppUi" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodDeliveryAppUi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>